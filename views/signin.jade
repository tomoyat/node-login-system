extends layout

block content
  form.form-sign(role="form", action="/signin", method="post")
    h2.form-sign-heading Please sign in
    input.form-control(type="text", placeholder="user id", name="uid", required, autofocus)
    input.form-control(type="signin-password", placeholder="password", name="password", required)
    button.btn.btn-lg.btn-primary.btn-block(type="submit") Sign in
