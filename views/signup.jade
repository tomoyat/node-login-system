extends layout

block content
  form.form-sign(role="form", action="/signup", method="post")
    h2.form-sign-heading Please sign up
    input.form-control(type="text", placeholder="user id", name="uid", required, autofocus)
    input.form-control(type="signup-password", placeholder="password", name="password", required)
    input.form-control(type="signup-confirm-password", placeholder="confirm password", name="confirmPassword", required)
    button.btn.btn-lg.btn-primary.btn-block(type="submit") Sign up
